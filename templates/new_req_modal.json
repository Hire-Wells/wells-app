{
  "type": "modal",
  "title": {
    "type": "plain_text",
    "text": "New Req",
    "emoji": true
  },
  "submit": {
    "type": "plain_text",
    "text": "Submit",
    "emoji": true
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel",
    "emoji": true
  },
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "plain_text",
        "text": "Please enter the details of your req below, and we Wells will be in touch with you soon.",
        "emoji": true
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "input",
      "block_id": "jobInfo",
      "label": {
        "type": "plain_text",
        "text": "(Official) Job Title, Level and Req #:",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input"
      }
    },{
      "type": "input",
      "block_id": "company",
      "label": {
        "type": "plain_text",
        "text": "Company Name",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input"
      }
    },{
      "type": "input",
      "block_id": "location",
      "label": {
        "type": "plain_text",
        "text": "Location",
        "emoji": true
      },
      "element": {
        "type": "plain_text_input"
      }
    },
    {
      "type": "input",
      "block_id": "relocation",
      "label": {
        "type": "plain_text",
        "text": "Eligible for relocation?"
      },
      "element": {
        "type": "plain_text_input",
        "placeholder": {"type": "plain_text", "text": "Yes/No"}
      }
    },
    {
      "type": "input",
      "block_id": "requirements",
      "label": {
        "type": "plain_text",
        "text": "Key Requirements and Responsibilities"
      },
      "element": {
        "type": "plain_text_input",
        "multiline": true
      }
    },
    {
      "type": "input",
      "optional": true,
      "block_id": "additionalInfo",
      "label": {
        "type": "plain_text",
        "text": "Additional Information"
      },
      "element": {
        "type": "plain_text_input",
        "multiline": true
      }
    }
  ]
}
